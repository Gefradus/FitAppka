@model FitAppka.Models.CreateGoalsModel
<html>
<head>
    <link rel="stylesheet" href="~/css/Home.css" type="text/css">
    <link href="~/css/AllViews.css" rel="stylesheet" />
    <link href="~/css/CreateProduct.css" rel="stylesheet" />
    <link href="~/css/Goals.css" rel="stylesheet" />
    <script src="~/js/ShowNavbar.js"></script>
    <script src="~/js/Validation.js"></script>
    <script>
        function inputBlocking() {
            var autoChecked = document.getElementById("auto").checked;
            document.getElementById("caloriesTarget").disabled = autoChecked;
            document.getElementById("proteinsTarget").disabled = autoChecked;
            document.getElementById("carbsTarget").disabled = autoChecked;
            document.getElementById("fatsTarget").disabled = autoChecked;
        }
    </script>
</head>
<body>
    <div class="container" id="page">
        <div class="row cent" style="height: 100%; margin-top: -5px">
            <div class="col-9 col-sm-8 col-lg-7 col-xl-6" id="mainRow">
                <form enctype="multipart/form-data" method="post">
                    <div class="naglowek">
                        Cele dziennego spożycia:
                    </div>
                    <div class="my-4" style="display: flex">
                        <input id="auto" type="checkbox" asp-for="AutoGeneratedDietaryGoals" class="mx-2" style="margin-top: 7px" checked onchange="inputBlocking()"/>
                        <label for="auto">Cele dietetyczne ustawiane automatycznie</label>
                    </div>
                    <div class="form-group cent">
                        <div class="leftCol">
                            <label class="control-label">Kalorii:</label>
                            <div style="display: flex;">
                                <input id="caloriesTarget" asp-for="CaloriesTarget" class="form-control" type="number" disabled onkeypress="onlyInt(event)" onchange="this.value = changeToMaxIfGreater(changeToInteger(this.value), 20000)" />
                                <div class="jednostka" style="margin-right: -5px;">kcal</div>
                            </div>
                            <span asp-validation-for="CaloriesTarget" class="text-danger"></span>
                        </div>
                        <div class="rightCol">
                            <label class="control-label">Białka:</label>
                            <div style="display: flex;">
                                <input id="proteinsTarget" asp-for="ProteinsTarget" class="form-control" type="text" disabled onkeypress="return onlyNumbers(event)" onchange="this.value = changeToMaxIfGreater(changeToNumeric(this.value, 4), 5000)" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="ProteinsTarget" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group cent" style="border-bottom: 1px solid darkgray; padding-bottom: 30px">
                        <div class="leftCol">
                            <label class="control-label">Tłuszczy:</label>
                            <div id="tluInDiv" style="display: flex">
                                <input id="fatsTarget" asp-for="FatsTarget" class="form-control" type="text" disabled onkeypress="return onlyNumbers(event)" onchange="this.value = changeToMaxIfGreater(changeToNumeric(this.value, 4), 2222)" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="FatsTarget" class="text-danger"></span>
                        </div>
                        <div class="rightCol">
                            <label class="control-label">Węglowodanów:</label>
                            <div style="display: flex">
                                <input id="carbsTarget" asp-for="CarbohydratesTarget" class="form-control" type="text" disabled onkeypress="return onlyNumbers(event)" onchange="this.value = changeToMaxIfGreater(changeToNumeric(this.value, 4), 5000)" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="CarbohydratesTarget" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="naglowek" style="margin-top: 25px">
                        Cele treningowe:
                    </div>
                    <div class="form-group cent">
                        <div class="leftCol">
                            <label class="control-label">Cel spalonych kalorii:</label>
                            <div style="display: flex;">
                                <input asp-for="CaloriesBurnedGoal" class="form-control" type="number" onkeypress="onlyInt(event)" onchange="this.value = changeToMaxIfGreater(changeToInteger(this.value), 5000)" />
                                <div class="jednostka" style="margin-right: -5px;">kcal</div>
                            </div>
                            <span asp-validation-for="CaloriesBurnedGoal" class="text-danger"></span>
                        </div>
                        <div class="rightCol">
                            <label class="control-label">Cel minut treningów:</label>
                            <div style="display: flex;">
                                <input asp-for="TrainingTimeGoal" class="form-control" type="text" onkeypress="return onlyNumbers(event)" onchange="this.value = changeToMaxIfGreater(changeToInteger(this.value), 1440)" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="TrainingTimeGoal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="my-4" style="display: flex">
                        <input id="include" type="checkbox" asp-for="IncludeCaloriesBurnedInBalance" class="mx-2" style="margin-top: 7px" />
                        <label for="include">Czy uwzględniać spalone kalorie w dziennym celu spożycia kalorii?</label>
                    </div>

                    <div class="form-group cent mt-5">
                        <input type="submit" value="Zapisz zmiany" class="btn btn-primary" style="width: 50%; height: 40px" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>