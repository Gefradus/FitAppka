@model FitAppka.Models.CreateGoalsModel
<html>
<head>
    <link rel="stylesheet" href="~/css/Home.css" type="text/css">
    <link href="~/css/AllViews.css" rel="stylesheet" />
    <link href="~/css/CreateProduct.css" rel="stylesheet" />
    <link href="~/css/Goals.css" rel="stylesheet" />
    <script src="~/js/ShowNavbar.js"></script>
    <script src="~/js/Validation.js"></script>
    <script src="~/js/Goals.js"></script>
    <script>
        function onload() {
            $("#auto").prop("checked", $("#hiddenAuto").val() == 1);
            $("#include").prop("checked", '@((bool)ViewData["include"] ? 1 : 0)' == 1);
            setInputsValues();
            $("#burnGoal").val(parseInt(preventZero(@ViewData["burnGoal"])));
            $("#timeGoal").val(parseInt(preventZero(@ViewData["timeGoal"])));
        }
    </script>
</head>
<body onload="onload()">
    <input type="hidden" id="hiddenAuto" value="@((bool)ViewData["auto"] ? 1 : 0)">
    <input type="hidden" id="hiddenKcal" value="@ViewData["calorieTarget"]" />
    <input type="hidden" id="hiddenProtein" value="@ViewData["proteinTarget"]" />
    <input type="hidden" id="hiddenFat" value="@ViewData["fatTarget"]" />
    <input type="hidden" id="hiddenCarbs" value="@ViewData["carbsTarget"]" />

    <div class="container" id="page">
        <div class="row cent" style="height: 100%; margin-top: -5px">
            <div class="col-9 col-sm-8 col-lg-7 col-xl-6" id="mainRow">
                <form id="form" enctype="multipart/form-data" method="post">
                    <div class="naglowek">
                        Cele dziennego spożycia:
                    </div>
                    <div class="my-4" style="display: flex">
                        <input id="auto" type="checkbox" asp-for="AutoGeneratedDietaryGoals" class="mx-2" style="margin-top: 7px" onchange="setInputsValues()" />
                        <label for="auto">Cele dietetyczne ustawiane automatycznie</label>
                    </div>
                    <div class="form-group cent">
                        <div class="leftCol">
                            <label class="control-label fl">Kalorii:</label><div class="star fl">*</div>
                            <div class="flexcb">
                                <input id="caloriesTarget" asp-for="CaloriesTarget" class="form-control int target" type="number" />
                                <div class="jednostka" style="margin-right: -5px;">kcal</div>
                            </div>
                            <span asp-validation-for="CaloriesTarget" class="text-danger"></span>
                        </div>
                        <div class="rightCol">
                            <label class="control-label fl">Białka:</label><div class="star fl">*</div>
                            <div class="flexcb">
                                <input id="proteinsTarget" asp-for="ProteinsTarget" class="form-control int target" type="number" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="ProteinsTarget" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group cent" style="border-bottom: 1px solid darkgray; padding-bottom: 30px">
                        <div class="leftCol">
                            <label class="control-label fl">Tłuszczy:</label><div class="star fl">*</div>
                            <div id="tluInDiv" class="flexcb">
                                <input id="fatsTarget" asp-for="FatsTarget" class="form-control int target" type="number" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="FatsTarget" class="text-danger"></span>
                        </div>
                        <div class="rightCol">
                            <label class="control-label fl">Węglowodanów:</label><div class="star fl">*</div>
                            <div class="flexcb">
                                <input id="carbsTarget" asp-for="CarbohydratesTarget" class="form-control int target" type="number" />
                                <div class="jednostka">g</div>
                            </div>
                            <span asp-validation-for="CarbohydratesTarget" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="naglowek" style="margin-bottom: 25px">
                        Cele treningowe:
                    </div>
                    <div class="form-group cent">
                        <div class="leftCol">
                            <label class="control-label">Cel spalonych kalorii:</label>
                            <div style="display: flex; margin-right: 25px">
                                <input id="burnGoal" asp-for="CaloriesBurnedGoal" class="form-control int" type="number" />

                            </div>
                            <span asp-validation-for="CaloriesBurnedGoal" class="text-danger"></span>
                        </div>
                        <div class="rightCol">
                            <label class="control-label">Cel minut treningów:</label>
                            <div style="display: flex; margin-right: 14px">
                                <input id="timeGoal" asp-for="TrainingTimeGoal" class="form-control int" type="number" />

                            </div>
                            <span asp-validation-for="TrainingTimeGoal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="my-4" style="display: flex">
                        <input id="include" type="checkbox" asp-for="IncludeCaloriesBurnedInBalance" class="mx-2" style="margin-top: 7px" />
                        <label for="include">Czy uwzględniać spalone kalorie w dziennym celu spożycia kalorii?</label>
                    </div>

                    <div class="form-group cent mt-5">
                        <button type="button" onclick="saveGoal()" class="btn btn-primary" style="width: 50%; height: 40px">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>inputsOnChange();</script>
</body>
</html>