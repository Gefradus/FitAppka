@model FitAppka.Models.SettingsModel;
<html lang="en">
    <head>
        <link href="~/css/SettingsStyle.css" rel="stylesheet" />
        <link href="~/css/AllViews.css" rel="stylesheet" />
        <link href="~/lib/jquery-ui-1.12.1/jquery-ui.css" rel="stylesheet" />
        <link href="~/css/Datepicker.css" rel="stylesheet" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/Settings.js"></script>
        <script src="~/js/Validation.js"></script>
        <script type="text/javascript">
            function onload() {
                if (@ViewData["isFirstLaunch"] == 0) {
                    restoreDefault();
                }

                document.getElementById("datepicker").value = '@ViewData["dateOfBirth"]';
            }

            function restoreDefault() {
               if (setFlag('@ViewData["sex"]')) {
                   document.getElementById("men").checked = true;
               }
               else {
                   document.getElementById("women").checked = true;
               }

                document.getElementById("weight").value = parseInt('@ViewData["weight"]');
                document.getElementById("growth").value = parseInt('@ViewData["growth"]');


                if ('@ViewData["changeGoal"]' == 2) {
                    document.getElementById("maintenance").checked = true;
                }
                if ('@ViewData["changeGoal"]' == 3) {
                    document.getElementById("gainWeight").checked = true;
                }

                var activityList = document.getElementsByName("activity");
                for (let i = 0; i < activityList.length; i++) {
                    if (activityList[i].value == '@ViewData["activity"]') {
                        activityList[i].checked = true;
                    }
                }

                document.getElementById("breakfast").checked = setFlag('@ViewData["breakfast"]');
                document.getElementById("lunch").checked = setFlag('@ViewData["lunch"]');
                document.getElementById("dinner").checked = setFlag('@ViewData["dinner"]');
                document.getElementById("dDessert").checked = setFlag('@ViewData["dessert"]');
                document.getElementById("snack").checked = setFlag('@ViewData["snack"]');
                document.getElementById("supper").checked = setFlag('@ViewData["supper"]');

                document.getElementById("pace").value = parseFloat('@ViewData["pace"]').toFixed(1);
            }
        </script>
    </head>


    <body onload="onload()">
        <header>
            <nav class="navbar navbar-dark navbar-expand-md border-bottom mb-3 czarnyNav">
                <div>
                    <div class="mr-auto mt-3">
                        <a class="ml-2 ml-sm-3 ml-md-4 ml-lg-5" asp-controller="Home" asp-action="Start"><img style="height: 50px; width:185px; margin-top: -10px" src="~/img/logorozowe.png" /></a>
                    </div>
                </div>
                <div>
                    <div class="navbar-nav ml-auto" style="position: absolute; right: 0; margin-top: -20px">
                        <div class="mr-2 mr-xs-3 mr-sm-4 mr-md-5">
                            <a class="nav-link text-light" asp-controller="Login" asp-action="Logout">Wyloguj się <img style="height: 15px; width:15px" src="~/img/logout.png" /></a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="row cent">
            <div class="col-sm-10 col-md-8 col-lg-6 cent" style="background-color: white; margin-top: -5px">
                <form id="form" method="post" onsubmit="return checkForm()" style="font-size: 18px">
                    <label style="font-weight: 600; margin-top: 15px; padding-bottom: 5px">Płeć</label>
                    <div class="form-group">
                        <label><input type="radio" id="women" name="sex" checked value=false style="margin-right: 10px" />Kobieta</label>
                        <label><input type="radio" id="men" name="sex" value=true style="margin-left: 15px; margin-right: 10px" />Mężczyzna</label>
                    </div>
                    <div style="padding-bottom: 10px">
                        <div style="margin-bottom: 15px">
                            <label asp-for="Date_of_birth" style="font-size: 16px; color: gray"></label>
                            <input id="datepicker" asp-for="Date_of_birth" onchange="" type="text" style="margin-top: -10px; width: calc(100% - 25px); margin-left: -1px; padding-left: 11px" readonly="readonly" />
                            <span asp-validation-for="Date_of_birth" class="text-danger" style="font-size: 16px"></span>
                        </div>
                        <div>
                            <label id="invalidDate" class="text-danger" hidden style="margin-top: -15px; margin-bottom: 15px; display: block">Podaj datę urodzenia</label>
                        </div>
                    </div>
                    <div style="padding-bottom: 25px; border-bottom: 1px solid darkgray">
                        <div class="cent">
                            <div style="width: calc(50% - 10px);">
                                <input id="weight" asp-for="Weight" class="form-control" type="number" min="10" max="600" placeholder="Waga [kg]" onkeypress="return onlyInt(event)" onchange="this.value = changeToInteger(this.value)"/>
                                <span asp-validation-for="Weight" class="text-danger" style="font-size: 16px"></span>
                            </div>
                            <label style="margin-right: 10px; margin-top: 5px; margin-left: 2px">kg</label>
                            <div style="width: calc(50% - 10px)">
                                <input id="growth" asp-for="Growth" class="form-control" min="50" max="300" placeholder="Wzrost [cm]" onkeypress="return onlyInt(event)" onchange="this.value = changeToInteger(this.value)">
                                <span asp-validation-for="Growth" class="text-danger" style="font-size: 16px"></span>
                            </div>
                            <label style="margin-top: 5px; margin-left: 2px">cm</label>
                        </div>
                        <div>
                            <label id="invalidWeight" class="text-danger" hidden style="width: 50%">Podaj wagę [kg]</label>
                            <label id="invalidGrowth" class="text-danger" hidden style="position: absolute; left: calc(50% + 5px)">Podaj wzrost [cm]</label>
                        </div>
                    </div>
                    <label asp-for="WeightChange_Goal" style="font-weight: 600; padding-top: 15px"></label>
                    <div><label><input id="loseWeight" type="radio" name="Cel" value="1" checked onclick="blockPace()" style="margin-right: 10px" />Chcę schudnąć</label></div>
                    <div><label><input id="maintenance" type="radio" name="Cel" value="2" onclick="blockPace()" style="margin-right: 10px" />Chcę utrzymać wagę</label></div>
                    <div style="border-bottom: 1px solid darkgray; padding-bottom: 15px;"><label><input id="gainWeight" type="radio" name="Cel" value="3" onclick="blockPace()" style="margin-right: 10px" />Chcę przytyć</label></div>


                    <label style="font-weight: 600; padding-top: 15px">Aktywność w ciągu doby</label>
                    <div style="padding-top: 5px"><label><input type="radio" name="activity" value=1 style="margin-right: 10px" />Brak aktywności, praca siedząca</label></div>
                    <div><label><input type="radio" name="activity" value=2 style="margin-right: 10px" />Niska (praca siedząca, 1-2 treningi/tydz.)</label></div>
                    <div><label><input type="radio" name="activity" value=3 checked style="margin-right: 10px" />Średnia (praca siedząca, 3-4 treningi/tydz.)</label></div>
                    <div><label><input type="radio" name="activity" value=4 style="margin-right: 10px" />Wysoka (praca fizyczna, 3-4 treningi/tydz.)</label></div>
                    <div style="padding-bottom: 1rem; border-bottom: 1px solid darkgray;"><label><input type="radio" name="activity" value=5 style="margin-right: 10px" />B. wysoka (zawodowi sportowcy, osoby codziennie trenujące)</label></div>

                    <label style="font-weight: 600; padding-top: 15px">Posiłki dnia</label>
                    <div>
                        <div><label><input id="breakfast" type="checkbox" checked name="Breakfast" value="true" style="margin-right: 10px" />Śniadanie</label></div>
                        <div><label><input id="lunch" type="checkbox" checked name="Lunch" value="true" style="margin-right: 10px" />II śniadanie</label></div>
                        <div><label><input id="dinner" type="checkbox" checked name="Dinner" value="true" style="margin-right: 10px" />Obiad</label></div>
                    </div>
                    <div style="border-bottom: 1px solid darkgray">
                        <div><label><input id="dessert" type="checkbox" checked name="Dessert" value="true" style="margin-right: 10px" />Deser</label></div>
                        <div><label><input id="snack" type="checkbox" checked name="Snack" value="true" style="margin-right: 10px" />Przekąska</label></div>
                        <div style="padding-bottom: 15px"><label><input id="supper" type="checkbox" checked name="Supper" value="true" style="margin-right: 10px" />Kolacja</label></div>
                    </div>


                    <label asp-for="PaceOfChange" class="srodkowanie" style="padding-top: 15px"></label>
                    <div class="form-group srodkowanie">
                        <button type="button" class="przycisk" value="Odejmij" onclick="decrementPace()"><img class="img-fluid" src="~/img/minus.png"></button>
                        <input id="pace" asp-for="PaceOfChange" type="number" step="0.1" value="0.4" /><span style="margin-left: -33px; float:right; margin-top: 2.5px; z-index: 99">kg</span>
                        <button type="button" class="przycisk" value="Dodaj" onclick="incrementPace()" style="margin-left: 13px"><img class="img-fluid" src="~/img/add.png"></button>
                    </div>


                    <input id="dolnyPrzycisk" type="submit" value="Zapisz i kontynuuj" asp-route-isFirstLaunch="@ViewData["isFirstLaunch"]" class="btn btn-primary" />
                    <div style="width: 100%; height: 1px"></div>
                </form>
            </div>
        </div>

        <script src="~/lib/jquery-ui-1.12.1/jquery-ui.js"></script>
        <script>
            var $j = jQuery.noConflict();
            $j("#datepicker").datepicker({
                minDate: new Date(1850, 0, 0),
                maxDate: Date.now(),
                dateFormat: 'yy-mm-dd',
                monthNames: ["Styczeń", "Luty", "Marzec", "Kwiecień",
                    "Maj", "Czerwiec", "Lipiec", "Sierpień", "Wrzesień",
                    "Październik", "Listopad", "Grudzień"],
                monthNamesShort: ["Sty", "Lut", "Mar", "Kwi",
                    "Maj", "Cze", "Lip", "Sie", "Wrz",
                    "Paź", "Lis", "Gru"],
                dayNames: ['Niedziela', 'Poniedziałek', 'Wtorek', 'Środa', 'Czwartek', 'Piątek', 'Sobota'],
                dayNamesShort: ['Ndz', 'Pon', 'Wto', 'Śro', 'Czw', 'Pt', 'Sob'],
                dayNamesMin: ['Nd', 'Pn', 'Wt', 'Śr', 'Cz', 'Pt', 'Sb'],
                changeYear: true,
                changeMonth: true
            });
        </script>
    </body>
</html>