@model FitAppka.Models.DTO.DietCreatorDTO.CreateDietDTO 
<html>
<head>
    <link href="~/css/Home.css" rel="stylesheet" />
    <link href="~/css/AllViews.css" rel="stylesheet" />
    <link href="~/css/AddTraining.css" rel="stylesheet" />
    <link href="~/css/CreateDiet.css" rel="stylesheet" />
    <script src="~/js/AllViews.js"></script>
    <script src="~/js/ShowNavbar.js"></script>
    <script src="~/js/CreateDiet.js"></script>
    <script src="~/js/Validation.js"></script>
    <script>
        function getRootPath() {
            return getWebRootPath("@(((string) ViewData["path"]).Replace("\\","\\\\"))");
        }
        function checkIfModalWasOpen() {
            if ('@(((bool)ViewData["wasSearched"]) ? "true" : "false")' == 'true') {
                $("#addProductModal").removeClass('fade');
                $("#addProductModal").modal('show');
                $("#addProductModal").addClass('fade');
            }
        }
    </script>
</head>
<body onload="onload()">
    <div class="container">
        <div class="modal fade" tabindex="-1" id="addProductModal" data-keyboard="false">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" style="height: 25px">
                        <button type="button" style="margin-top: -30px" class="close" data-dismiss="modal">×</button>
                    </div>
                    <div class="modal-body">
                        <div id="tableContainer">
                            <div class="row no-gutters" style="height: 90%">
                                <div class="col-12">
                                    <div class="row no-gutters mb-4">
                                        <form method="get">
                                            <div style="margin-top: -3px">
                                                <div id="textboxDIV">@Html.TextBox("search", "", new { @class = "form-control", @placeholder = "Szukaj produktu" })</div>
                                                <div style="float:left; padding-top:15px"><button id="submitSearch" type="submit"><img src="~/img/searchBlack.png" id="searchIcon" /></button></div>
                                                <div style="clear:both"></div>
                                                @Html.Hidden("searched", true)
                                            </div>
                                        </form>
                                    </div>
                                    <div class="row no-gutters acent pt-2">
                                        <div class="col-4"></div>
                                        <div class="col-8 cent pb-1" id="stog">na 100g produktu</div>
                                    </div>
                                    <div class="row no-gutters cent acent" id="productsHeader">
                                        <div class="col-3 cent">Nazwa</div>
                                        <div class="col-2 cent">Kcal</div>
                                        <div class="col-2 cent" id="protein">B</div>
                                        <div class="col-2 cent" id="fat">T</div>
                                        <div class="col-2 cent" id="carbs">W</div>
                                        <div class="col-1"></div>
                                    </div>
                                    <div class="row no-gutters">
                                        <div class="searchPanel">
                                            @foreach (var item in Model.SearchProducts)
                                            {
                                                string photoPath;
                                                if (item.PhotoPath != null) {
                                                    photoPath = "~/photos/" + (item.PhotoPath);
                                                    <script>pathArray.push('@item.PhotoPath');</script>
                                                }
                                                else {
                                                    photoPath = "~/img/miss.png";
                                                    <script>pathArray.push('null');</script>
                                                }
                                                <script>
                                                    IDarray.push('@item.ProductId');
                                                    nameArray.push('@item.ProductName');
                                                    kcalArray.push('@item.Calories');
                                                    proteinsArray.push('@item.Proteins');
                                                    fatsArray.push('@item.Fats');
                                                    carbsArray.push('@item.Carbohydrates');
                                                </script>

                                                <div class="row no-gutters cent acent searchProduct">
                                                    <div class="col-3 cent">
                                                        <div>@item.ProductName</div>
                                                    </div>
                                                    <div class="col-2 cent">@item.Calories</div>
                                                    <div class="col-2 cent">@item.Proteins</div>
                                                    <div class="col-2 cent">@item.Fats</div>
                                                    <div class="col-2 cent">@item.Carbohydrates</div>
                                                    <div class="col-1">
                                                        <button type="button" class="btnAddProduct" onclick="showAddOrEditModal()">
                                                            <img class="imgBtnAdd" src="~/img/add.png">
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                            @if (Model.SearchProducts.Count.Equals(0))
                                            {
                                                <div class="cent mt-5">
                                                    Nie znaleziono produktu o podanej nazwie
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>checkIfModalWasOpen();</script>
        <input type="hidden" id="productId" />

        <div class="modal fade" tabindex="-1" id="addOrEditModal" data-keyboard="false" style="margin-top: 170px">
            <div class="modal-dialog" style="display: flex; justify-content: center">
                <div class="modal-content" style="width: 300px;">
                    <div class="modal-header" style="height: 25px">
                        <button type="button" style="margin-top: -30px" class="close" data-dismiss="modal">×</button>
                    </div>

                    <div class="modal-body">
                        <div class="container">
                            <div class="row no-gutters" style="height: 100px">
                                <div id="photoArea" class="col-6"></div>
                                <div class="col-6">
                                    <div class="container" style="margin-left: -50px; margin-top: -14px; width: 215px">
                                        <div id="name" class="row no-gutters cent"></div>
                                        <div id="kcal" class="row no-gutters cent"></div>
                                        <div class="row no-gutters cent" style="width: 170px; font-size: 13px; margin-left: 7px">
                                            <div id="proteins"></div>
                                            <div id="fats"></div>
                                            <div id="carbs"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row no-gutters cent" style="margin-top: 10px;">
                                <input id="grammage" type="number" min="1" max="9999" style="width: 60px; margin-right: 3px; text-align:center;" class="int" onchange="this.value = changeToMaxIfGreaterInt(this.value, 999999)" /><div style="font-weight: 600; margin-top: 2px">g</div>
                                <button style="margin-left: 5px; background:none; border:none"><img style="width:30px; height:30px" src="~/img/add.png" /></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row no-gutters cent h-100">
            <div class="col-12 col-sm-11 col-lg-8 col-xl-7 cent" style="background-color: white; margin-top: -5px; height: unset">
                <form method="post" class="mx-3">
                    <div class="form-group">
                        <div class="my-2">Stwórz dietę dla:</div>
                        <ul class="ks-cboxtags">
                            <li><input type="checkbox" id="checkboxOne" value="Monday"><label for="checkboxOne">Pon</label></li>
                            <li><input type="checkbox" id="checkboxTwo" value="Tuesday"><label for="checkboxTwo">Wto</label></li>
                            <li><input type="checkbox" id="checkboxThree" value="Wednesday"><label for="checkboxThree">Śro</label></li>
                            <li><input type="checkbox" id="checkboxFour" value="Thursday"><label for="checkboxFour">Czw</label></li>
                            <li><input type="checkbox" id="checkboxFive" value="Friday"><label for="checkboxFive" style="width: 65px">Pt</label></li>
                            <li><input type="checkbox" id="checkboxSix" value="Saturday"><label for="checkboxSix">Sob</label></li>
                            <li><input type="checkbox" id="checkboxSeven" value="Sunday"><label for="checkboxSeven">Ndz</label></li>
                        </ul>
                    </div>
                    <div class="form-group">
                        <label>Nazwa diety:</label>
                        <input class="form-control" style="border-radius: .15rem !important" />
                    </div>
                    <div class="form-group">
                        <label>Produkty:</label>
                        <button type="button" data-target="#addProductModal" data-toggle="modal" id="btnAddProduct"><img style="height:30px; width: 30px" src="~/img/add.png"></button>
                    </div>
                    <div class="form-group">
                        <div class="row no-gutters acent py-2" id="columnsHeader">
                            <div class="col-2 col-lg-3 h-100 cent">Nazwa</div>
                            <div class="col-9 col-lg-8 container h-100">
                                <div class="row no-gutters">
                                    <div class="col-3 cent">Ilość</div>
                                    <div class="col-9 container row no-gutters">
                                        <div class="col-3 cent">Kcal</div>
                                        <div class="col-3 cent">B</div>
                                        <div class="col-3 cent">T</div>
                                        <div class="col-3 cent">W</div>
                                    </div>
                                </div>
                            </div><div class="col-1"></div>
                        </div>

                        <div id="productsPanel">
                            @foreach (var item in Model.AddedProducts)
                            {
                                <div class="row no-gutters productRow">
                                    <div class="col-2 col-lg-3 h-100 acent cent">@item.ProductName</div>
                                    <div class="col-9 col-lg-8 container h-100">
                                        <div class="row no-gutters h-100">
                                            <div class="col-3 acent cent">100</div>
                                            <div class="col-9 container row no-gutters acent">
                                                <div class="col-3 cent">@item.Calories</div>
                                                <div class="col-3 cent">@item.Proteins</div>
                                                <div class="col-3 cent">@item.Fats</div>
                                                <div class="col-3 cent">@item.Carbohydrates</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-1 acent cent">
                                        <button type="button" class="btnDelete"><img class="delete" src="https://cdn.onlinewebfonts.com/svg/img_416864.png"></button>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                    <div class="form-group cent mt-5">
                        <button id="saveDiet" type="button" class="btn btn-primary mt-4">Zapisz dietę</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>